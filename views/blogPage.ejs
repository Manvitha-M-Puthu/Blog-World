<% if(locals.Posts) {%>
    <%for(i=0;i<Posts.length;i++){%>
        <div class="blogcontainer">
            <div class="title">
                <h1><%=Posts[i].blogTitle%></h1>
                <p><%=Posts[i].blogContent%></p>
            </div>
        </div>
    <%}%>
<%} else {%>
    <h1>There is No post to display!! Go to home page!</h1>
    <form action="/" method="GET"><input type="submit" name="goback" value="goback"></form>
<% } %>    

